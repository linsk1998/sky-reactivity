{
	"compilerOptions": {
		"target": "ES2021",
		"lib": [
			"ES2015"
		],
		"strict": false,
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"importHelpers": true,
		"noEmitHelpers": true,
		"noEmit": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "types",
	},
	"include": [
		"src/**/*"
	]
}
